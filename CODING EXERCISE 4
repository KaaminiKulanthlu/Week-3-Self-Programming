		System.out.println("The name is: "+ name);
		System.out.println("Please enter the amount 1 :");
		num1 = scanMe.nextInt();
		System.out.println("Amount  1 is :"+ num1);
		System.out.println("Please enter the amount 2 :");
		num2 = scanMe.nextInt();
		System.out.println("Amount 2 is :" + num2);
		System.out.println("Please enter the amount 3 :");
